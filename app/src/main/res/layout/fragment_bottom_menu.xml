<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue">


    <Button
        android:id="@+id/stop_button"
        android:layout_width="103sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_btn1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="-59dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/changa_one"
        android:text="Stop"
        android:textColor="@color/sky_blue"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/massage"
        android:layout_width="183sp"
        android:layout_height="45sp"
        android:layout_above="@+id/main_btn1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="231dp"
        android:layout_marginBottom="550dp"
        android:text="I need HELP!"
        android:textSize="25dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346" />

    <LinearLayout
        android:id="@+id/bottom_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:background="@color/blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="80sp"
            android:layout_height="45sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/lessons_image"
            android:layout_width="80sp"
            android:layout_height="45sp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="onLessonsClick"
            app:srcCompat="@drawable/lessons"
            tools:ignore="TouchTargetSizeCheck" />


        <ImageView
            android:id="@+id/compass_image"
            android:layout_width="80sp"
            android:layout_height="45sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="90dp"
            app:srcCompat="@drawable/compass1" />

        <ImageView
            android:id="@+id/settings_image"
            android:layout_width="90sp"
            android:layout_height="match_parent"
            android:layout_marginStart="-10dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/rec_icon" />


    </LinearLayout>

    <Button
        android:id="@+id/main_btn1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/bottom_linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-60dp"
        android:backgroundTint="@color/blue"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/bottom_linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-46dp"
        app:srcCompat="@drawable/main_button_background" />

    <ImageView
        android:id="@+id/warning_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-27dp"
        android:layout_above="@+id/bottom_linear_layout"
        app:srcCompat="@drawable/warning" />

</RelativeLayout>
