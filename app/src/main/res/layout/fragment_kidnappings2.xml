<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue"
    android:layout_marginBottom="330dp"
    tools:context=".DogsLessonsStartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/sky_blue">

        <TextView
            android:id="@+id/kidnappings_start_lesson1"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/kid3"/>

        <TextView
            android:id="@+id/kidnappings_start_lesson2"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/kid2"/>


        <TextView
            android:id="@+id/kidnappings_start_lesson3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/kid5"/>


        <TextView
            android:id="@+id/kidnappings_start_lesson4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:textSize="25dp" />


        <Button
            android:id="@+id/page_turner1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="900dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/blue" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/right"
            android:layout_marginStart="927dp"
            android:layout_marginTop="-70dp"/>


        <Button
            android:id="@+id/page_turner2"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginTop="-65dp"
            android:layout_marginEnd="300dp"
            android:backgroundTint="@color/blue" />

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/left"
            android:layout_marginStart="17dp"
            android:layout_marginTop="-70dp"/>


        <TextView
            android:id="@+id/dogs_start_lesson5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>

</ScrollView>