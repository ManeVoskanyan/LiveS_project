<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/first_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">


    <TextView
        android:id="@+id/first_lives"
        android:layout_width="246sp"
        android:layout_height="83sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="136sp"
        android:layout_marginTop="189sp"
        android:layout_marginEnd="29sp"
        android:layout_marginBottom="459dp"
        android:fontFamily="@font/changa_one"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="2"
        android:text="@string/lives"
        android:textColor="@color/sky_blue"
        android:textSize="60dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="400sp"
        android:layout_height="400sp"
        android:layout_centerInParent="true"
        android:elevation="5sp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/first_animation" />




</RelativeLayout>

