<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_relative_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/lessons_fragment1_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

    </FrameLayout>


    <RelativeLayout

        android:id="@+id/top_Relative_layout"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="330dp"
        android:background="@color/blue">



        <fragment
            android:id="@+id/map_google"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="398dp"
            android:layout_height="272dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            tools:context=".MapsActivity" />


    </RelativeLayout>

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="700dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/changa_one"
        android:onClick="showSignOutDialog"
        android:text="Sign Out"
        android:textColor="@color/sky_blue"
        android:textSize="16dp"
        app:cornerRadius="5dp" />



    <ImageView
        android:id="@+id/map_image_2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/lessons_fragment1_container"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="306dp"
        android:layout_marginBottom="303dp"
        app:srcCompat="@drawable/map1" />

    <TextView
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lessons_fragment1_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="302dp"
        android:fontFamily="@font/changa_one"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Map"
        android:textColor="@color/blue"
        android:textSize="35dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lessons_fragment1_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="227dp"
        android:fontFamily="@font/changa_one"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Daily tasks"
        android:textColor="@color/blue"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lessons_fragment1_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="96dp"
        android:fontFamily="@font/changa_one"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="About LiveS"
        android:textColor="@color/blue"
        android:textSize="35dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lessons_fragment1_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="163dp"
        android:fontFamily="@font/changa_one"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Recordings"
        android:textColor="@color/blue"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/daily_tasks"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_above="@+id/lessons_fragment1_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="221dp"
        android:onClick="onQuizBtnClick"
        app:srcCompat="@drawable/lamp" />


    <ImageView
        android:id="@+id/safety_btn"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/lessons_fragment1_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="78dp"
        app:srcCompat="@drawable/safety1" />

    <ImageView
        android:id="@+id/recordings_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/lessons_fragment1_container"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="303dp"
        android:layout_marginBottom="152dp"
        android:onClick="onRecordingsBtnClick"
        app:srcCompat="@drawable/microphone1" />


</RelativeLayout>

