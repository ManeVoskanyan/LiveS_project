<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sky_blue"
    tools:context=".Register">


    <ImageView
        android:layout_width="685dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="202dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="330dp"
        app:srcCompat="@drawable/initial_bg_menu" />

    <TextView
        android:id="@+id/total_questions"
        android:layout_width="831dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="1384dp"
        android:fontFamily="@font/changa_one"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Create an Account"
        android:textColor="@color/sky_blue"
        android:textSize="60sp" />

    <ImageView
        android:layout_width="868dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="498dp"
        app:srcCompat="@drawable/login2_background" />

    <EditText
        android:id="@+id/username"
        android:layout_width="832dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="109dp"
        android:fontFamily="@font/changa_one"
        android:hint="Username"
        android:textColor="@color/blue_light"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/gmail"
        android:layout_width="832dp"
        android:layout_height="133dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="455dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="1121dp"
        android:fontFamily="@font/changa_one"
        android:hint="Email"
        android:textColor="@color/blue_light"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="629dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="925dp"
        android:fontFamily="@font/changa_one"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/blue_light"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="830dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="833dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="742dp"
        android:fontFamily="@font/changa_one"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/blue_light"
        android:textSize="40sp" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="463dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="325dp"
        android:layout_marginTop="1100dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="426dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/changa_one"
        android:onClick="signUp"
        android:text="Sign Up"
        android:textColor="@color/sky_blue"
        android:textSize="40dp"
        app:cornerRadius="13dp" />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_button"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
